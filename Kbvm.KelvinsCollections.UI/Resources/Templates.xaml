<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:viewmodels="using:Kbvm.KelvinsCollections.UI.ViewModels"
    xmlns:controls="clr-namespace:Microsoft.UI.Xaml.Controls;assembly=Microsoft.WinUI">

	<DataTemplate x:Key="HeaderTemplate">
		<TextBlock Style="{StaticResource EditorHeader}" Text="{Binding}" />
	</DataTemplate>

	<DataTemplate x:Key="DatePickerHeaderTemplate">
		<TextBlock Style="{StaticResource EditorHeader}" Text="{Binding}" Margin="0 0 0 8" />
	</DataTemplate>

</ResourceDictionary>
