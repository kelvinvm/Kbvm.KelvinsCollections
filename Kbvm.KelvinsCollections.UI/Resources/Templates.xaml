<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

	<DataTemplate x:Key="HeaderTemplate">
		<TextBlock Style="{StaticResource EditorHeader}" Text="{Binding}" />
	</DataTemplate>

	<DataTemplate x:Key="DatePickerHeaderTemplate">
		<TextBlock Style="{StaticResource EditorHeader}" Text="{Binding}" Margin="0 0 0 8" />
	</DataTemplate>

	<DataTemplate x:Key="TrackListItemTemplate" >
		<StackPanel Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock 
					HorizontalAlignment="Right"
					Margin="0 0 10 0"
					MinWidth="15"
					Text="{Binding TrackNumber}" />
				<TextBlock 
					MaxWidth="300"
					TextWrapping="Wrap"
					Text="{Binding Name}" FontWeight="SemiBold" />
			</StackPanel>
			<TextBlock 
				Margin="25 0 0 0"
				HorizontalAlignment="Left"
				MaxWidth="300"
				Text="{Binding Artist}" 
				Style="{StaticResource ItalicSmall}" />
		</StackPanel>
	</DataTemplate>
	
</ResourceDictionary>
